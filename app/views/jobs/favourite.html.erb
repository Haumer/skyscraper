<div class="container">
    <div class="all-cards">
      <% @jobs.each do |job| %>
        <div class="col-xs-12 col-sm-6">
          <div class="card">
            <div>
              Job Title: <%= job.title %>
            </div>
            <div>
              Company: <%= job.company %>
            </div>
            <div>
              <% if job.salary.include?("k") %>
                Salary: <%= job.salary %>
              <% else %>
                Salary: <%= job.salary %>
              <% end %>
            </div>
            <div>
              Location: <%= job.location %>
            </div>
            <div>
              Link:
              <%= link_to job.link do %>
                <%= job.website %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <div>
 </div>
