

<div class="container">
  <% sorted = @searches.sort_by { |e| e.created_at }.reverse %>
  <% sorted.each do |search| %>
    <div class="col-xs-6 col-sm-3">
      <div class="searches-card">
        <div class="searches-title">
          <%= link_to search_path(search) do %>
            <div class="card">
              <div>
              <%= search.title.capitalize %>
              </div>
              <div>
                <% date_array = search.created_at.to_s.split.first.split("-") %>
                <%= Date.new(date_array[0].to_i, date_array[1].to_i, date_array[2].to_i).strftime('%e %b %Y') %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
