<div class="bg" style=''>
  <h3 style="margin-top: 0px; padding-top: 20px;">Enter a Programming Language</h3>
  <div class="form-container">
    <div class="col-sm-6 offset-sm-3">
      <div class="home text-center">
        <div class="form-inline text-center">
          <%= simple_form_for @search do |f| %>
            <%= f.input :title, :label => 'Look for ', :input_html => { :class => 'search-new-title', :placeholder => "e.g. ruby"}%>
            <%= f.button :submit, "Scrape!", class: "button-home"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
